{
  "semi": true,
  "singleQuote": true,
  "printWidth": 120,
  "useTabs": false,
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": "*.vue",
      "options": {
        "parser": "vue"
      }
    },
    {
      "files": "*.json",
      "options": {
        "parser": "json",
        "tabWidth": 4,
        "trailingComma": "none"
      }
    }
  ]
}
