{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start AAS Hub frontend",
            "type": "shell",
            "command": "yarn",
            "args": [
                "dev",
                "--host"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend/aashub"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "detail": "Start the Vue 3 Vite development server"
        },
        {
            "label": "Install dependencies",
            "type": "shell",
            "command": "yarn",
            "args": [
                "install"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend/aashub"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Install dependencies for the Vue 3 Vite project"
        },
        {
            "label": "Lint AAS Hub frontend",
            "type": "shell",
            "command": "yarn",
            "args": [
                "lint:check"
            ],
            "options": {
                "cwd": "${workspaceFolder}/frontend/aashub"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Lint the Vue 3 Vite project"
        },
        {
            "label": "Check code formatting",
            "type": "shell",
            "command": "npx",
            "args": [
                "prettier",
                "--check",
                "\"**/*.{ts,vue,json,js}\""
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "test",
                "isDefault": false
            },
            "problemMatcher": [],
            "detail": "Check code formatting using Prettier"
        }
    ]
}
